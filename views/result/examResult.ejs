<%- include('../partials/header') %>

<div class="container mt-5">
  <h2>📊 Results for Exam: <%= exam.title %></h2>

  <!-- ✅ Toggle Visibility Button -->
  <div class="mt-3 mb-4">
    <form action="/exam/results/toggle/<%= exam._id %>" method="POST">

      <button type="submit" class="btn btn-<%= exam.showResults ? 'danger' : 'success' %>">
        <%= exam.showResults ? '🔒 Hide Results from Students' : '🔓 Show Results to Students' %>
      </button>
    </form>
  </div>

  <% if (attempts.length === 0) { %>
    <p class="text-muted">No student has attempted this exam yet.</p>
  <% } else { %>
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Student</th>
          <th>Score</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% attempts.forEach(attempt => { %>
          <tr>
            <td><%= attempt.studentId.name || attempt.studentId.email %></td>
            <td><%= attempt.score %></td>
            <td><%= new Date(attempt.createdAt).toLocaleString() %></td>
            <td>
             <a href="/exam/result/view/<%= attempt._id %>" class="btn btn-sm btn-outline-primary">🔍 View</a>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <a href="/exam/list" class="btn btn-secondary mt-3">← Back to Exams</a>
</div>

<%- include('../partials/footer') %>
