<%- include('partials/header') %>

<div class="container mt-5">
  <h2>Student - Forgot Password</h2>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <!-- STEP 1: Send OTP -->
  <form action="/student/send-otp-forgot-password" method="POST">
    <div class="form-group mt-3">
      <label>Email:</label>
      <input type="email" name="email" required class="form-control" placeholder="Enter your registered student email">
    </div>
    <button type="submit" class="btn btn-outline-primary mt-3">Send OTP</button>
  </form>

  <!-- STEP 2: Submit OTP -->
  <form action="/student/forgot-password" method="POST">
    <div class="form-group mt-4">
      <label>Email:</label>
      <input type="email" name="email" required class="form-control" placeholder="Re-enter email">
    </div>

    <div class="form-group mt-3">
      <label>OTP:</label>
      <input type="text" name="otp" required class="form-control" placeholder="Enter OTP">
    </div>

    <button type="submit" class="btn btn-primary mt-3">Verify & Continue</button>
  </form>

  <a href="/auth/login" class="btn btn-link mt-3">Back to Login</a>
</div>

<%- include('partials/footer') %>
