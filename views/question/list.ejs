<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Questions</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h3>Questions List</h3>

  <% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger"><%= messages.error[0] %></div>
  <% } %>
  <% if (messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success"><%= messages.success[0] %></div>
  <% } %>

  <form class="mb-3" method="GET" action="/question/list/<%= examId %>">
    <input type="text" name="search" placeholder="Search questions..." class="form-control" value="<%= search %>">
  </form>

  <% if (questions.length === 0) { %>
    <p class="text-muted">No questions found.</p>
  <% } else { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Text</th>
          <th>Correct Answers</th>
          <th>Multiple?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% questions.forEach((q, index) => { %>
          <tr>
            <td><%= index + 1 + (currentPage - 1) * 10 %></td>
            <td><%= q.text %></td>
            <td><%= q.correctAnswers.join(", ") %></td>
            <td><%= q.allowMultipleAnswers ? 'Yes' : 'No' %></td>
            <td>
              <a href="/question/edit/<%= q._id %>" class="btn btn-sm btn-warning">Edit</a>
              <form action="/question/delete/<%= q._id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Delete this question?')" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav>
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>

  <div class="mt-4">
    <a href="/exam/list" class="btn btn-outline-primary">Back to Exam List</a>
  </div>
</div>
</body>
</html>
