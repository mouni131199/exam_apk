<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Question</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h3>Edit Question</h3>

    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>

    <form action="/question/update/<%= question._id %>" method="POST">
      <input type="hidden" name="examId" value="<%= question.exam %>">

      <div class="mb-3">
        <label class="form-label">Question Text</label>
        <input type="text" class="form-control" name="questionText" value="<%= question.questionText %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Explanation</label>
        <textarea class="form-control" name="explanation"><%= question.explanation || '' %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Options</label>
        <% question.options.forEach(function(opt) { %>
          <input type="text" class="form-control mb-2" name="options" value="<%= opt %>">
        <% }); %>
      </div>

      <div class="mb-3">
        <label class="form-label">Correct Answers (indexes)</label>
        <% question.correctAnswers.forEach(function(ans) { %>
          <input type="text" class="form-control mb-2" name="correctAnswers" value="<%= ans %>">
        <% }); %>
      </div>

      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="allowMultipleAnswers" id="allowMultipleAnswers"
               <%= question.allowMultiple ? 'checked' : '' %>>
        <label class="form-check-label" for="allowMultipleAnswers">Allow Multiple Answers</label>
      </div>

      <button type="submit" class="btn btn-primary">Update Question</button>
      <a href="/question/list/<%= question.exam %>" class="btn btn-secondary">Back</a>
    </form>
  </div>
</body>
</html>
